<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    >
<!--  fillViewport faz o preenchimento das partes que ficaram em branco  -->

<!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation = "vertical"
    tools:context=".MainActivity"
    android:background="@color/white">


    <!-- "match_parent" Adequa a Largura da tela -->
    <!-- "wrap_content" Baseasse no tamanho dos componentes dentro   -->
    <!-- Pesquisar diferença entre imageView e ImagefilterView-->
    <ImageView
        android:contentDescription="Duas mãos com computadores"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/tecnologia"
        android:scaleType="centerCrop"
        android:layout_margin="20dp">
    </ImageView>


    <TextView
        android:id="@+id/txtTituloNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título da Notícia"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/txtNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Conteúdo da notícia. Notícia bombastica very very good \nVamos testar tudo o que \nAndroid Oferece"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple_500"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/txtAutorNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Nome do Autor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txtDataNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "02/05/2023"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>
</ScrollView>